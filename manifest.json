{
  "manifest_version": 2,
  "name": "Bang search for google",
  "version": "1.0.0",
  "description": "bring the duckduckgo bang search to google and bing",
  "icons": {
    "16": "icons/bang.svg",
    "24": "icons/bang.svg",
    "48": "icons/bang.svg",
    "128": "icons/bang.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/*",
    "*://*.bing.com/*"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "bangsearch@example.com"
    }
  }
}